import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import LabelEncoder
from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score

df = pd.read_csv("breastcancer.csv")
le = LabelEncoder()
y = le.fit_transform(df["diagnosis"])
X = df.drop(columns=["diagnosis", "id", "Unnamed: 32"], errors="ignore")

X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)

for depth in [1, 2, 3, 4, 5, 6, None]:
    model = DecisionTreeClassifier(max_depth=depth, random_state=42)
    model.fit(X_train, y_train)
    print(f"Depth={depth} | Train={accuracy_score(y_train, model.predict(X_train)):.2f} | Test={accuracy_score(y_test, model.predict(X_test)):.2f}")
